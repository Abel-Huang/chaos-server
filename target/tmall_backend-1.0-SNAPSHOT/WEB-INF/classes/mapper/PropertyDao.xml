<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.abelib.tmall.dao.PropertyDao">
    <resultMap id="propertyMap" type="Property">
        <id property="id" column="id"/>
        <result property="categoryId" column="cid"/>
        <result property="propertyName" column="property_name"/>
        <result property="note" column="note"/>
    </resultMap>
    <cache/>

    <select id="countProperty" resultType="int">
        select count(*) from property
    </select>
    <!--遍历整个 Property 表-->
    <select id="listAllProperty" parameterType="int" resultMap="propertyMap">
        select * from property
       <where>
           <if test="_parameter != null ">
               cid = #{_parameter}
           </if>
       </where>
    </select>

    <!--通过id获取 Property-->
    <select id="getPropertyById" parameterType="int" resultMap="propertyMap">
        select * from property
        where id = #{id}
    </select>

    <!--插入，并且主键回填-->
    <insert id="insertProperty"  parameterType="Property"
            useGeneratedKeys="true"  keyProperty="id">
        insert into property(cid, property_name, note) values(#{categoryId}, #{propertyName}, #{note})
    </insert>

    <!--删除 Property-->
    <delete id="deleteProperty" parameterType="int">
        delete from property where id = #{id}
    </delete>

    <!--更新 Property-->
    <update id="updateProperty" parameterType="Property">
        update property
        <set>
            <if test="note != null and note != ''">
                note = #{note},
            </if>
            <if test="categoryId != null">
                cid = #{categoryId},
            </if>
            <if test="propertyName != null and propertyName != ''">
                property_name = #{propertyName}
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>