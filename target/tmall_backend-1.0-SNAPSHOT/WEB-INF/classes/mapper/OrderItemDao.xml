<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.abelib.tmall.dao.OrderItemDao">
    <resultMap id="orderItemMap" type="OrderItem">
        <id property="id" column="id"/>
        <result property="productId" column="pid"/>
        <result property="orderId" column="oid"/>
        <result property="userId" column="uid"/>
        <result property="number" column="number"/>
    </resultMap>
    <cache/>

    <select id="countOrderItem" resultType="int">
        select count(*) from oreder_item
    </select>
    <!--遍历整个 order_item 表-->
    <select id="listAllOrderItem" resultMap="orderItemMap">
        select * from order_item
    </select>

    <!--通过id获取 OrderItem-->
    <select id="getOrderItemById" parameterType="int" resultMap="orderItemMap">
        select * from order_item
        where id = #{id}
    </select>

    <!--插入，并且主键回填-->
    <insert id="insertOrderItem"  parameterType="OrderItem"
            useGeneratedKeys="true"  keyProperty="id">
        insert into order_item(pid, oid, uid, number)
        values(#{productId}, #{orderId}, #{userId}, #{number})
    </insert>

    <!--删除 OrderItem-->
    <delete id="deleteOrderItem" parameterType="int">
        delete from order_item where id = #{id}
    </delete>

    <!--更新 OrderItem-->
    <update id="updateOrderItem" parameterType="OrderItem">
        update order_item
        <set>
            <if test="productId != null">
                pid = #{productId},
            </if>
            <if test="orderId != null">
                oid = #{orderId},
            </if>
            <if test="usrId != null">
                uid = #{usrId},
            </if>
            <if test="number != null">
                number = #{number}
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>